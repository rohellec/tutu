<%= form_for [:admin, railway_station],
             html: { style: "display: #{ hidden ? 'none' : 'block' }",
                     class: "form-inline" } do |form| %>

  <div class="form-group">
    <%= form.text_field :title, placeholder: t(".enter_title"), class: "form-control mr-2" %>
  </div>

  <div class="actions">
    <%= form.submit t("update"), class: "btn btn-primary" %>
  </div>
<% end %>
