<tr>
  <td class="cell-17">
    <div id="railway_station_title_<%= railway_station.id %>">
      <%= railway_station.title %>
    </div>
    <%= render "form_inline", railway_station: railway_station, hidden: true %>
  </td>
  <td class="cell-45"></td>
  <td>
    <div class="btn-group">
      <%= link_to t("show"),    admin_railway_station_path(railway_station),
                                class: "btn btn-secondary" %>
      <%= link_to t("edit"),    "", data: { railway_station_id: railway_station.id },
                                class: "btn btn-secondary edit_railway_station" %>
      <%= link_to t("destroy"), admin_railway_station_path(railway_station),
                                method: :delete,
                                data: { confirm: t("confirm") },
                                class: "btn btn-secondary" %>
    </div>
  </td>
</tr>
