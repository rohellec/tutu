<h1>Railway Stations</h1>

<% if @railway_stations.any? %>

  <table>
    <thead>
      <tr>
        <th>Title</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <%= render @railway_stations %>
    </tbody>
  </table>

<% else %>

  <p>There are no stations added</p>

<% end %>

<br>

<%= link_to 'New Railway Station', new_admin_railway_station_path %>
