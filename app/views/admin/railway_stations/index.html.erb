<div class="col">
  <h1><%= t(".index_header") %></h1>

  <% if @railway_stations.any? %>

    <table class="table table-striped table-hover table-center-cell">
      <thead>
        <tr>
          <th><%= t(".title") %></th>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>
        <%= render @railway_stations %>
      </tbody>
    </table>

  <% else %>

    <p class="no-items"><%= t(".no_stations") %></p>

  <% end %>

  <%= link_to t(".new_station"), new_admin_railway_station_path, class: "btn btn-primary" %>
</div>
