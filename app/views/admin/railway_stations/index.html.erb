<h1><%= t(".index_header") %></h1>

<% if @railway_stations.any? %>

  <table>
    <thead>
      <tr>
        <th><%= t(".title") %></th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <%= render @railway_stations %>
    </tbody>
  </table>

<% else %>

  <p><%= t(".no_stations") %></p>

<% end %>

<br>

<%= link_to t(".new_station"), new_admin_railway_station_path %>
