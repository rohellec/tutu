<h1><%= t(".index_header") %></h1>

<% if @routes.any? %>

  <table>
    <thead>
      <tr>
        <th><%= t(".title") %></th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <%= render @routes %>
    </tbody>
  </table>

<% else %>

  <p><%= t(".no_routes") %></p>

<% end %>

<br>

<%= link_to t(".new_route"), new_admin_route_path %>
