<%= form_for [:admin, ticket] do |form| %>
  <%= render "common/errors", resource: ticket %>

  <div class="form-group">
    <%= form.label :user_id %>
    <%= form.collection_select :user_id, User.all, :id, :full_name,
      { prompt: t(".select_user") }, { class: "custom-select form-control" } %>
  </div>

  <div class="form-group">
    <%= form.label :pasenger %>
    <%= form.text_field :passenger, placeholder: t("enter_name"), class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :train_id %>
    <%= form.collection_select :train_id, Train.all, :id, :number,
      { prompt: t(".select_train") }, { class: "custom-select form-control" } %>
  </div>

  <div class="form-group">
    <%= form.label :base_station_id %>
    <%= form.collection_select :base_station_id, RailwayStation.all, :id, :title,
      { prompt: t(".select_station") }, { class: "custom-select form-control" } %>
  </div>

  <div class="form-group">
    <%= form.label :final_station_id %>
    <%= form.collection_select :final_station_id, RailwayStation.all, :id, :title,
      { prompt: t(".select_station") }, { class: "custom-select form-control" } %>
  </div>

  <div class="actions">
    <%= form.submit ticket.new_record? ? t(".create") : t(".update"),
                 class: "btn btn-primary" %>
  </div>
<% end %>
