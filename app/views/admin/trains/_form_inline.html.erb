<%= form_for [:admin, train],
             html: { style: "display: #{ hidden ? 'none' : 'block' }",
                     class: "form-inline" } do |form| %>

  <div class="form-group">
    <%= form.text_field :number, class: "form-control mr-2" %>
  </div>

  <div class="form-group">
    <%= form.collection_select :route_id, Route.all, :id, :title,
                               { prompt: t(".select_route") },
                               { class: "custom-select mr-2"} %>
  </div>

  <div class="form-group">
    <div class="form-check form-check-inline">
      <%= form.radio_button :head_direction, true, class: "form-check-input" %>
      <%= form.label :head_direction, t(".head"), value: true, class: "form-check-label" %>
    </div>

    <div class="form-check form-check-inline">
      <%= form.radio_button :head_direction, false, class: "form-check-input" %>
      <%= form.label :head_direction, t(".tail"), value: false, class: "form-check-label" %>
    </div>
  </div>

  <div class="actions">
    <%= form.submit t("update"), class: "btn btn-primary" %>
  </div>
<% end %>
