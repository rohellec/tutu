<h1><%= t(".index_header") %></h1>

<% if @trains.any? %>

  <table>
    <thead>
      <tr>
        <th><%= t(".number") %></th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <%= render @trains %>
    </tbody>
  </table>

<% else %>

  <p><%= t(".no_trains") %></p>

<% end %>

