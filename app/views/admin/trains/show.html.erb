<div class="col">
  <h1><%= t(".show-header") %></h3>

  <div class="row">
    <div class="col-2"><b><%= t(".number")  %>:</b></div>
    <div class="col-2"><b><%= @train.number %>:</b></div>

    <div class="col-2"><b><%= t(".route") %>:</b></div>
    <div class="col-2">
      <% if @train.route.present? %>
        <b><%= @train.route.title %></b>
      <% else %>
        <%= t(".no_route") %>
      <% end %>
    </div>
  </div>

  <h3><%= t(".wagons") %></h3>
  <%= render "wagons", wagons: @train.sorted_wagons %>

  <div class="row no-gutters justify-content-between">
    <%= link_to t(".new_wagon"), new_admin_train_wagon_path(@train),
                                 class: "btn btn-primary" %>
    <div class="btn-group">
      <%= link_to t("back"), admin_trains_path,
                             class: "btn btn-outline-secondary" %>
      <%= link_to t("edit"), edit_admin_train_path(@train),
                             class: "btn btn-secondary" %>
    </div>
  </div>
</div>
