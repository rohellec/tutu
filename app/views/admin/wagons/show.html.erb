<div class="col">
  <h1><%= t(".show_header", ordinal: @wagon.ordinal )%></h1>

  <p>
    <strong><%= t(".train") %>:</strong>
    <%= @wagon.train.number %>
  </p>

  <p>
    <strong><%= t(".type") %>:</strong>
    <%= t(".#{@wagon.display_name}") %>
  </p>

  <%= render "admin/wagons/types/#{@wagon.type.underscore}", wagon: @wagon %>

  <div class="btn-group">
    <%= link_to t("back"), admin_train_path(@wagon.train), class: "btn btn-outline-secondary" %>
    <%= link_to t("edit"), edit_admin_wagon_path(@wagon),  class: "btn btn-secondary" %>
  </div>
</div>
