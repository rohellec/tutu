<h1>Routes</h1>

<% if @routes.any? %>

  <table>
    <thead>
      <tr>
        <th>Title</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <%= render @routes %>
    </tbody>
  </table>

<% else %>

  <p>There are no routes added</p>

<% end %>

<br>

<%= link_to 'New route', new_route_path %>
