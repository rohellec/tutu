<h1>Tickets</h1>

<% if @tickets.any? %>

  <table class="table table-striped table-hover">
    <thead>
      <tr>
        <th>Train</th>
        <th class="text-center">Passenger</th>
        <th class="text-center">Base station</th>
        <th class="text-center">Final station</th>
        <th class="text-center">Departure</th>
        <th class="text-center">Arrival</th>
        <th colspan="2"></th>
      </tr>
    </thead>

    <tbody>
      <%= render @tickets %>
    </tbody>
  </table>

<% else %>

  <p>There are no bought tickets</p>

<% end %>
