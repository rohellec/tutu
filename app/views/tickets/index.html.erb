<h1>Tickets</h1>

<% if @tickets.any? %>

  <table>
    <thead>
      <tr>
        <th>Train</th>
        <th>Passenger</th>
        <th>Base station</th>
        <th>Final station</th>
        <th>Departure</th>
        <th>Arrival</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <%= render @tickets %>
    </tbody>
  </table>

<% else %>

  <p>There are no bought tickets</p>

<% end %>
