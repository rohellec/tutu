<p id="notice"><%= notice %></p>

<h1>Trains</h1>

<% if @trains.any? %>

  <table>
    <thead>
      <tr>
        <th>Number</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <%= render @trains %>
    </tbody>
  </table>

<% else %>

  <p>There are no trains added</p>

<% end %>

<br>

<%= link_to 'New Train', new_train_path %>
