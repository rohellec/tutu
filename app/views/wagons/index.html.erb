<p id="notice"><%= notice %></p>

<h1>Wagons</h1>

<% if @wagons.any? %>

  <table>
    <thead>
      <tr>
        <th>Train</th>
        <th>Ordinal</th>
        <th>Type</th>
        <th>Bottom</th>
        <th>Upper</th>
        <th>Side bottom</th>
        <th>Side upper</th>
        <th>Seats</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <%= render partial: "wagon", collection: @wagons %>
    </tbody>
  </table>

<% else %>

  <p>There are no wagons added</p>

<% end %>
