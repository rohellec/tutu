<p id="notice"><%= notice %></p>

<h1>Wagons</h1>

<% if @wagons.any? %>

  <table>
    <thead>
      <tr>
        <th>Train</th>
        <th>Type</th>
        <th>Bottom places</th>
        <th>Upper places</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <%= render @wagons %>
    </tbody>
  </table>

<% else %>

  <p>There are no wagons added</p>

<% end %>

<br>

<%= link_to 'New Wagon', new_wagon_path %>
